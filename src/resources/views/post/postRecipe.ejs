<section class="login flex justify-center pt-24">
  <div class="w-full max-w-xs">
    <form
      action="/postrecipe"
      method="POST"
      class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
    >
      <% if(messages.error) { %>
      <span class="text-red-500 text-sm"><%= messages.error %></span>
      <% } %>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="title">
          Recipe Name
        </label>
        <input
          name="recipeName"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          type="text"
          placeholder="Enter a recipe name"
        />
      </div>

      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">
          Short Description
        </label>
        <textarea
          name="description"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          type="textarea"
          placeholder="Write description"
        ></textarea>
      </div>

      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">
          Cook Time
        </label>
        <input
          name="cookTime"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          type="textarea"
          placeholder="Write as mm:ss, eg. 1:45"
        />
      </div>

      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">
          Servings
        </label>
        <input
          name="servings"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          type="textarea"
          placeholder="Write a number, eg. 4"
        />
      </div>

      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">
          Ingredients
        </label>
        <textarea
          name="ingredients"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          type="textarea"
          placeholder="eg. Chicken: 2 Pounds"
        ></textarea>
        <label
          class="text-gray-700 text-opacity-50 leading-tight focus:outline-none focus:shadow-outline"
        >
          separate using commas( , )
        </label>
      </div>

      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">
          Instructions
        </label>
        <textarea
          name="instructions"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          type="textarea"
          placeholder="Write Instructions"
        ></textarea>
      </div>

      <div class="flex items-center justify-between">
        <button
          class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit"
        >
          Post
        </button>
        <a
          class="inline-block align-baseline font-bold text-sm"
          href="/postRecipe"
        >
          Wanna create a post?
        </a>
      </div>
    </form>
  </div>
</section>
